<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignUpPage"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:id="@+id/backIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/titleLogin"
                android:layout_width="wrap_content"
                android:fontFamily="@font/quicksand_semibold"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFB84D"
                app:layout_constraintStart_toEndOf="@id/backIcon"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"/>

        <EditText
            android:fontFamily="@font/quicksand_semibold"
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:background="@drawable/grey_rounded"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:fontFamily="@font/quicksand_semibold"
            android:id="@+id/editUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:background="@drawable/grey_rounded"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:fontFamily="@font/quicksand_semibold"
            android:text="BIRTHDAY"
            android:textColor="#F4A700"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <EditText
                android:fontFamily="@font/quicksand_semibold"
                android:id="@+id/birthMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="MM"
                android:background="@drawable/grey_rounded"
                android:padding="12dp"
                android:inputType="number" />

            <Space android:layout_width="8dp" android:layout_height="wrap_content" />

            <EditText
                android:fontFamily="@font/quicksand_semibold"
                android:id="@+id/birthDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="DD"
                android:background="@drawable/grey_rounded"
                android:padding="12dp"
                android:inputType="number" />

            <Space android:layout_width="8dp" android:layout_height="wrap_content" />

            <EditText
                android:fontFamily="@font/quicksand_semibold"
                android:id="@+id/birthYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="YY"
                android:background="@drawable/grey_rounded"
                android:padding="12dp"
                android:inputType="number" />
        </LinearLayout>

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTINUE"
            app:backgroundTint="@color/primary"
            android:background="@drawable/button"
            android:textColor="@color/secondary"
            android:textAllCaps="true"
            android:layout_marginBottom="24dp" />

        <TextView
            android:fontFamily="@font/quicksand_semibold"
            android:id="@+id/alreadyHaveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? LOG IN"
            android:textColor="#007AFF"
            android:textSize="14sp" />
    </LinearLayout>
</ScrollView>
